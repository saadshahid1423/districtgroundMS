@model IEnumerable<DistrictPlayGroundManagementSystem.Booking>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="content-header row">
                <div class="content-header-left col-md-6 col-xs-12 mb-1">
                    <h3 class="content-header-title"> Booking List</h3>
                </div>

                <div class="content-header-right breadcrumbs-right breadcrumbs-top col-md-6 col-xs-12">
                    <div class="breadcrumb-wrapper col-xs-12">
                        <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-success btn-sm" onclick="OpenModelPopup(this)" data="/User/Booking/Create/">Create</button>



                    </div>
                </div>
            </div>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Name)
                            </th>
                            <th>
                                @Html.DisplayName("Team Name")
                            </th>
                            <th>
                                @Html.DisplayName("Ground Name")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Detail)
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Team.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ground.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Detail)
                                </td>
                                @if (item.IsAuthorized == true)
                                {
                                    <td>
                                        <a class="btn btn-primary btn-rounded btn-fw">Authorized</a>

                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-danger btn-rounded btn-fw">UnAuthorized</a>

                                    </td>
                                }
                                <td>
                                    <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-primary " onclick="OpenModelPopup(this)" data="/User/Booking/Edit?Id=@item.id">Edit</button>
                                    <a class="btn btn-danger btn-rounded btn-fw" id="deletebtn" onclick="JSalert()" href="/User/Booking/Delete?id=@item.id">Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>


@if (ViewBag.Message != null && ViewBag.Message != "")
{
    <script>
             toastr.success('@ViewBag.Message');
    </script>
}
@if (ViewBag.Error != null && ViewBag.Error != "")
{
    <script>
               toastr.error('@ViewBag.Error');
    </script>
}

<script>
    function JSalert() {
        event.preventDefault();
        Swal.fire({
            title: 'Are you sure you want to delete this booking?',
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: `Delete`,
            denyButtonText: `Don't Delete`,
        }).then((result) => {
            if (result.isConfirmed) {
                fetch($('#deletebtn').prop('href')).then(() => {

                    Swal.fire(
                        'Deleted!',
                        'Your Booking has been deleted.',
                        'success'
                    ).then(function () {
                        location.reload()
                    });

                })
            }
            else {
                return false
            }
        })

    }

</script>









